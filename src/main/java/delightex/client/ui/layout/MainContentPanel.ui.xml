<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .sidebar {
            background-color: #868686;
        }

        .canvas {
            background-color: #aaa;
        }

    </ui:style>

    <g:DockLayoutPanel unit="EM" ui:field="wrapper">
       <g:west size="36"><g:HTML ui:field="sidebar" styleName="{style.sidebar}">Sidebar</g:HTML></g:west>
       <g:center size="6"><g:HTML styleName="{style.canvas}" ui:field="mainContentPanel">Canvas</g:HTML></g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>