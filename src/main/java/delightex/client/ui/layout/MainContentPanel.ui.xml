<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .sidebar {
        background-color: #868686;
        }

        .canvas {
        background-color: #C5C5C5;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" ui:field="wrapper">
        <g:west size="256">
            <g:HTML ui:field="sidebar" styleName="{style.sidebar}">Sidebar</g:HTML>
        </g:west>
        <g:center>
            <g:HTML styleName="{style.canvas}" ui:field="mainContentPanel">Canvas</g:HTML>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>