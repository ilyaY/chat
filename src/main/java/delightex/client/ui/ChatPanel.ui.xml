<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:HTMLPanel>
    <g:VerticalPanel>
      <g:Label ui:field="helloText" height="30"/>
      <g:HorizontalPanel>
        <g:TextBox width="200px" ui:field="messageBox"/>
        <g:Button text="Send" ui:field="sendButton" enabled="false"/>
      </g:HorizontalPanel>
      <g:VerticalPanel ui:field="messagePanel"/>
    </g:VerticalPanel>
  </g:HTMLPanel>
</ui:UiBinder>