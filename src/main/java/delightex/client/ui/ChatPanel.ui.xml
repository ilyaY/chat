<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DockLayoutPanel unit='EM' ui:field="wrapper">
        <g:north size="2">
            <g:VerticalPanel>
                <g:Label ui:field="helloText" styleName="{style.welcomeLabel}"/>
                <g:Button ui:field="toggleChat"></g:Button>
            </g:VerticalPanel>
        </g:north>

        <g:center size="2">
            <g:ScrollPanel ui:field="messagePanelWrapper" styleName="{style.mainPanel}">
                <g:VerticalPanel ui:field="messagePanel"/>
            </g:ScrollPanel>
        </g:center>

        <g:south size='4'>
            <g:HTMLPanel styleName="{style.inputWrapper}">
                <g:TextBox visibleLength="50" ui:field="messageBox" styleName="{style.textBox}"/>
                <g:Button text="Send" ui:field="sendButton" enabled="false"/>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

    <ui:style>
        .mainPanel {
        padding: 20px;
        }

        .welcomeLabel {
        font: normal 13px "Lucida Grande", Arial, sans-serif;
        font-weight: bold;
        padding-bottom: 10px;
        }

        .textBox {
        font: normal 15px "Lucida Grande", Arial, sans-serif;
        }

        .inputWrapper {
        padding: 20px;
        }
    </ui:style>
</ui:UiBinder>