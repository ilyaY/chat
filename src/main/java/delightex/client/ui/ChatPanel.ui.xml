<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:HTMLPanel styleName="{style.mainPanel}">
    <g:VerticalPanel>
      <g:Label ui:field="helloText" styleName="{style.welcomeLabel}"/>
      <g:HorizontalPanel spacing="3">
        <g:TextBox visibleLength="50" ui:field="messageBox" styleName="{style.textBox}"/>
        <g:Button text="Send" ui:field="sendButton" enabled="false"/>
      </g:HorizontalPanel>
      <g:VerticalPanel ui:field="messagePanel"/>
    </g:VerticalPanel>
  </g:HTMLPanel>
  <ui:style>
    .mainPanel {
      padding: 20px;
    }

    .welcomeLabel {
      font: normal 13px "Lucida Grande", Arial, sans-serif;
      font-weight: bold;
      padding-bottom: 10px;
    }

    .textBox {
      font: normal 15px "Lucida Grande", Arial, sans-serif;
    }
  </ui:style>
</ui:UiBinder>