<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        .wrapper {
            padding: 16px;
        }

    </ui:style>
    <g:HTMLPanel styleName="{style.wrapper}">
        <g:VerticalPanel>
            <g:Label ui:field="helloText" height="30"/>
            <g:VerticalPanel ui:field="chatList"/>
        </g:VerticalPanel>
        <g:HorizontalPanel>
            <g:TextBox ui:field="chatName"/>
            <g:Button text="Create Chat" ui:field="newButton"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>