<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style type="delightex.client.ui.panels.ChatBubble.Style">

        .wrapper {
            width: 298px;
            margin-top: 8px;
        }

        .portrait {
            float: left;
            width: 24px;
            <!--margin-top: -1px;-->
        }

        .portraitWrapperRight {
            float: right;
        }

        .portrait:after {
            content: '';
            position: relative;
            border-style: solid;
            border-width: 0px 9px 9px 0;
            border-color: transparent #fff;
            display: block;
            width: 0;
            z-index: 1;
            left: 16px;
            top: -22px;
            margin-bottom: -16px;
        }

        .portraitRight:after {
            border-width: 0px 0px 9px 9px;
            left: -1px;
            top: -22px;
        }

        .portrait:before {
            content: '';
            position: relative;
            border-style: solid;
            border-width: 0px 10px 10px 0;
            border-color: transparent #999;
            display: block;
            width: 0;
            z-index: 1;
            left: 14px;
            top: 9px;
            margin-top: -10px;
        }

        .portraitRight:before {
            border-width: 0px 0px 10px 10px;
            left: 1px;
        }

        .messageWrapper {
            float: right;
            box-shadow: 0px 0px 3px #999;
        }

        .messageWrapperRight {
            float: left;
        }

        .messageWrapper>div:first-of-type {
            border-top-left-radius: 0px;
        }

        .messageWrapperRight>div:first-of-type {
            border-top-right-radius: 0px;
            border-top-left-radius: 3px;
        }

        .messageWrapper>div {
            border: 1px solid #999;
            border-radius: 3px;
            padding: 4px 32px 4px 8px;
            margin-top: -1px;
            width: 232px;
            /* GRADIENT #fff #dfdfdf */
            background: #ffffff; /* Old browsers */
            background: -moz-linear-gradient(top, #ffffff 0%, #dfdfdf 100%); /* FF3.6+ */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#dfdfdf)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #ffffff 0%,#dfdfdf 100%); /* Chrome10+,Safari5.1+ */

            overflow: hidden;
            text-overflow: ellipsis;
        }

        .messageWrapper>div:hover {
            background: #ffffff;;
            cursor: pointer;
        }

        .userName {
            font-weight: bold;
        }

        .messageWrapper>div:hover .optionsAnchor {
            display: block;
        }

        .optionsAnchor {
            display: none;
            position: relative;
            margin-top: -22px;
            padding: 1px 4px;
            border-radius: 3px;
            top: 21px;
            left: 225px;
            font-size: 14px;
            text-decoration: none;
            color: #686868;
            width: 28px;
        }

        .optionsAnchor.optionsAnchorHover, .optionsAnchor:hover {
            background-color: #868686;
            color: white;
            text-decoration: none;
        }

        .angleUp {
            display: none;
            text-align: right;
        }

        .optionsAnchor.optionsAnchorHover .angleUp,.messageWrapper>div .optionsAnchor:hover .angleUp {
            display: inline;
        }
    </ui:style>

    <g:HTMLPanel ui:field="wrapper" styleName="{style.wrapper}">
        <div ui:field="portraitWrapper" class="{style.portrait}">
            <img src="img/portrait.jpg" width="24px"/>
        </div>
        <g:FlowPanel ui:field="subBubbleList" styleName="{style.messageWrapper}">
            <g:HTMLPanel>
                <g:Anchor ui:field="optionsAnchor" styleName="{style.optionsAnchor}"><i class="fa fa-cog"></i>&nbsp;<i class="fa fa-angle-up {style.angleUp}"></i></g:Anchor>
                <g:HTML ui:field="userName" styleName="{style.userName}"></g:HTML>
                <g:HTML ui:field="message"></g:HTML>
            </g:HTMLPanel>
        </g:FlowPanel>
        <div style="clear: both"></div>
    </g:HTMLPanel>

</ui:UiBinder>