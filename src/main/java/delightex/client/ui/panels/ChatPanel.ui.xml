<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

    <ui:style type="delightex.client.ui.panels.ChatPanel.Style">

        .headingWrapper {
            padding: 10px 16px;
            box-shadow: 0px 5px 20px 0px rgba(0, 255, 0, 0.1);
        }

        .wrapper {

        }

        .mainPanel {
            padding: 16px;
            <!--box-shadow: inset 0px 5px 0px 0px rgba(0, 0, 0, 1);-->
            <!--box-shadow: inset 0px -5px 0px 0px rgba(0, 0, 0, 1);-->
            <!--box-shadow: 0 0px 10px grey inset, 0 0px 10px grey inset;-->
        }

        .shadowTop {
            <!--border-bottom: 1px solid rgba(0, 0, 0, 0.4);-->
            <!--height: 8px;-->
            <!--box-shadow: 0px 5px 20px 0px rgba(0, 255, 0, 0.1); /* Standard */-->
            <!--line-height: 8px;-->
            <!--background-color: transparent;-->
            <!--background: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,.2)), to(rgba(0,0,0,0)));-->
            <!--padding: 12px;-->
            <!---webkit-mask-box-image: -webkit-gradient(linear, left top, right top, color-stop(0.0, rgba(0,0,0,0)),-->
            <!--color-stop(0.5, rgba(0,0,0,.8)), color-stop(1.0, rgba(0,0,0,0)));-->
        }

        .shadowBottom {
            <!--box-shadow: 0px -5px 20px 0px rgba(0, 255, 0, 0.1); /* Standard */-->
            <!--line-height: 8px;-->
            <!--background-color: transparent;-->
            <!--background: -webkit-gradient(linear, left bottom, left top, from(rgba(0,0,0,.2)), to(rgba(0,0,0,0)));-->
            <!---webkit-mask-box-image: -webkit-gradient(linear, left top, right top, color-stop(0.0, rgba(0,0,0,0)),-->
            <!--color-stop(0.5, rgba(0,0,0,.8)), color-stop(1.0, rgba(0,0,0,0)));-->
        }

        .welcomeLabel {
            font: normal 13px "Lucida Grande", Arial, sans-serif;
            font-weight: bold;
            padding-bottom: 10px;
        }

        .inputWrapper {
            box-shadow: 0px -5px 20px 0px rgba(0, 255, 0, 0.1);
        }

        .textBox {
            margin: 12px 12px;
            width: 296px;
        }

        .mainPanel:hover {
            box-shadow: 0px 0px 12px rgba(0,0,0,0.4);
            opacity: 1;
        }

        .mainPanel::-webkit-scrollbar {
            width: 8px;
            height: 6px;
        }

        .mainPanel::-webkit-scrollbar-track-piece {
            background-color: transparent;
            -webkit-border-radius: 6px;
        }

        .mainPanel::-webkit-scrollbar-thumb:vertical {
            height: 6px;
            background-color: #666;
            -webkit-border-radius: 6px;
        }

        .mainPanel::-webkit-scrollbar-thumb:horizontal {
            width: 12px;
            background-color: #666;
            -webkit-border-radius: 6px;
        }

        .messagePanel {

        }

        .unscrollable {
            position: absolute;
            bottom: 16px;
            left: 16px;
        }
    </ui:style>

    <g:DockLayoutPanel unit='PX' ui:field="wrapper">
        <g:north size="56">
            <g:HTMLPanel ui:field="headingWrapper" styleName="{style.headingWrapper}">
                <div style="float: left;">
                    <h5 style="color: white; font-weight: normal; font-size: 1.3em;">User Chat</h5>
                </div>
                <div style="float: right;">
                    <b:Button>Toggle shadow</b:Button>
                </div>
                <div style="clear: both;"></div>
            </g:HTMLPanel>
        </g:north>
        <g:center styleName="{style.wrapper}">
            <g:HTMLPanel ui:field="mainPanel" styleName="{style.mainPanel}">
                <g:FlowPanel ui:field="messagePanel" styleName="{style.unscrollable}"/>
            </g:HTMLPanel>
        </g:center>

        <g:south size='56'>
            <g:HTMLPanel ui:field="inputWrapper" styleName="{style.inputWrapper}">
                <!--<div class="{style.shadowBottom}">&nbsp;</div>-->
                <g:TextArea ui:field="messageBox" styleName="{style.textBox}"/>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>