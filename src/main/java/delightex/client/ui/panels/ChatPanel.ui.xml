<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .wrapper {
        padding: 16px;
        }

        .mainPanel {
        padding: 20px;
        border-bottom: 1px solid #e7e7e7;
        }

        .mainPanel:before {
        content: "";
        border-top: 1px solid rgba(0, 0, 0, 0.4);
        height: 8px;
        background: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,.2)), to(rgba(0,0,0,0)));
        -webkit-mask-box-image: -webkit-gradient(linear, left top, right top, color-stop(0.0, rgba(0,0,0,0)),
        color-stop(0.5, rgba(0,0,0,.8)), color-stop(1.0, rgba(0,0,0,0)));
        }

        .shadowBottom {
        border-bottom: 1px solid rgba(0, 0, 0, 0.4);
        height: 8px;
        background: -webkit-gradient(linear, left top, left bottom, from(rgba(0,0,0,.2)), to(rgba(0,0,0,0)));
        -webkit-mask-box-image: -webkit-gradient(linear, left top, right top, color-stop(0.0, rgba(0,0,0,0)),
        color-stop(0.5, rgba(0,0,0,.8)), color-stop(1.0, rgba(0,0,0,0)));
        }

        .welcomeLabel {
        font: normal 13px "Lucida Grande", Arial, sans-serif;
        font-weight: bold;
        padding-bottom: 10px;
        }

        .textBox {
        width: 260px;
        }

        .inputWrapper {
            padding: 16px;
        }
    </ui:style>

    <g:DockLayoutPanel unit='EM' ui:field="wrapper">
        <g:center size="2">
            <!--<g:HTMLPanel>-->
                <!--<div class="{style.shadowTop}"></div>-->
                <g:ScrollPanel ui:field="messagePanelWrapper" styleName="{style.mainPanel}">
                    <g:VerticalPanel ui:field="messagePanel"/>
                </g:ScrollPanel>
                <!--<div class="{style.shadowBottom}"></div>-->
            <!--</g:HTMLPanel>-->
        </g:center>

        <g:south size='4'>
            <g:HTMLPanel styleName="{style.inputWrapper}">
                <g:TextBox ui:field="messageBox" styleName="{style.textBox}"/>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>