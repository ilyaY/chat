<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:HTMLPanel>
    <g:VerticalPanel>
      <g:Label text="Enter your name"/>
      <g:TextBox ui:field="nameField"/>
      <g:Button ui:field="enter" text="Enter chat" addStyleNames="{style.right}"/>
    </g:VerticalPanel>
  </g:HTMLPanel>

  <ui:style>
    .right {
      float: right;
    }
  </ui:style>
</ui:UiBinder>